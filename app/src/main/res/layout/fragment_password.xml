<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.main.PasswordFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_4"
        android:paddingTop="@dimen/margin_4"
        android:paddingBottom="@dimen/margin_4"
        android:textColorHint="@color/hintColor"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/test_your_password"
            android:imeOptions="flagNoPersonalizedLearning"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:textColor="@color/textTitleColor"
            android:textSize="@dimen/text_16" />

    </com.google.android.material.textfield.TextInputLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@drawable/shape_scrollbar_thumb"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_4"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginBottom="@dimen/margin_8"
                android:paddingTop="@dimen/margin_6.5"
                android:paddingBottom="@dimen/margin_6.5"
                android:background="@drawable/shape_card_with_ripple">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginBottom="@dimen/margin_12"
                    android:layout_marginStart="@dimen/margin_16"
                    android:text="Basic"
                    android:textColor="@color/textTitleColor"
                    android:textSize="@dimen/text_20"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingStart="@dimen/margin_16"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16"
                    android:paddingBottom="@dimen/margin_10">

                    <ImageView
                        android:id="@+id/strength_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_12"
                        android:src="@drawable/ic_strength" />

                    <TextView
                        android:id="@+id/strength_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_2.5"
                        android:layout_toEndOf="@+id/strength_img"
                        android:paddingStart="@dimen/margin_8"
                        android:paddingEnd="@dimen/margin_8"
                        android:text="@string/strength"
                        android:textColor="@color/textTitleColor"
                        android:textSize="@dimen/text_17" />

                    <TextView
                        android:id="@+id/strength_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/strength_title"
                        android:layout_toEndOf="@+id/strength_img"
                        android:paddingStart="@dimen/margin_8"
                        android:paddingEnd="@dimen/margin_8"
                        android:text="@string/not_applicable"
                        android:textColor="?colorControlNormal"
                        android:textSize="@dimen/text_16" />

                    <LinearLayout
                        android:id="@+id/strength_meter_layout"
                        android:layout_below="@+id/strength_subtitle"
                        android:layout_toEndOf="@+id/strength_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/margin_8"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_8"
                        android:gravity="center">

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/worst_meter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            app:trackCornerRadius="@dimen/margin_10"
                            app:trackColor="@color/hintColor"
                            android:layout_weight="1"/>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/weak_meter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            app:trackCornerRadius="@dimen/margin_10"
                            app:trackColor="@color/hintColor"
                            android:layout_weight="1"/>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/medium_meter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            app:trackCornerRadius="@dimen/margin_10"
                            app:trackColor="@color/hintColor"
                            android:layout_weight="1"/>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/strong_meter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            app:trackCornerRadius="@dimen/margin_10"
                            app:trackColor="@color/hintColor"
                            android:layout_weight="1"/>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/excellent_meter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            app:trackCornerRadius="@dimen/margin_10"
                            app:trackColor="@color/hintColor"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </RelativeLayout>

                <!--============================================-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingStart="@dimen/margin_16"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16"
                    android:paddingBottom="@dimen/margin_4">

                    <ImageView
                        android:id="@+id/basic_crack_time_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_12"
                        android:src="@drawable/ic_time_to_crack" />

                    <TextView
                        android:id="@+id/basic_crack_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_2.5"
                        android:layout_toEndOf="@+id/basic_crack_time_img"
                        android:paddingStart="@dimen/margin_8"
                        android:paddingEnd="@dimen/margin_8"
                        android:text="@string/est_time_to_crack"
                        android:textColor="@color/textTitleColor"
                        android:textSize="@dimen/text_17"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/basic_crack_time_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/margin_12"
                        android:src="@drawable/ic_about" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/offline_slow_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="@dimen/margin_2.5"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingEnd="@dimen/margin_8"
                    android:text="• 10k per second"
                    android:textColor="@color/textTitleColor"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/offline_slow_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:layout_marginStart="65dp"
                    android:layout_marginEnd="@dimen/margin_2.5"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingEnd="@dimen/margin_8"
                    android:text="@string/not_applicable"
                    android:textColor="?colorControlNormal"
                    android:textSize="@dimen/text_16" />

                <!--============================================-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingStart="@dimen/margin_16"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16"
                    android:paddingBottom="@dimen/margin_10">

                    <ImageView
                        android:id="@+id/warning_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_12"
                        android:src="@drawable/ic_warning" />

                    <TextView
                        android:id="@+id/warning_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_2.5"
                        android:layout_toEndOf="@+id/warning_img"
                        android:paddingStart="@dimen/margin_8"
                        android:paddingEnd="@dimen/margin_8"
                        android:text="@string/warning"
                        android:textColor="@color/textTitleColor"
                        android:textSize="@dimen/text_17" />

                    <TextView
                        android:id="@+id/warning_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/warning_title"
                        android:layout_toEndOf="@+id/warning_img"
                        android:paddingStart="@dimen/margin_8"
                        android:paddingEnd="@dimen/margin_8"
                        android:text="@string/not_applicable"
                        android:textColor="?colorControlNormal"
                        android:textSize="@dimen/text_16" />

                </RelativeLayout>

                <!--============================================-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingStart="@dimen/margin_16"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16"
                    android:paddingBottom="@dimen/margin_10">

                    <ImageView
                        android:id="@+id/suggestions_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_12"
                        android:src="@drawable/ic_suggestions" />

                    <TextView
                        android:id="@+id/suggestions_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_2.5"
                        android:layout_toEndOf="@+id/suggestions_img"
                        android:paddingStart="@dimen/margin_8"
                        android:paddingEnd="@dimen/margin_8"
                        android:text="@string/suggestions"
                        android:textColor="@color/textTitleColor"
                        android:textSize="@dimen/text_17" />

                    <TextView
                        android:id="@+id/suggestions_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/suggestions_title"
                        android:layout_toEndOf="@+id/suggestions_img"
                        android:paddingStart="@dimen/margin_8"
                        android:paddingEnd="@dimen/margin_8"
                        android:text="@string/not_applicable"
                        android:textColor="?colorControlNormal"
                        android:textSize="@dimen/text_16" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:paddingTop="@dimen/margin_6.5"
                android:paddingBottom="@dimen/margin_6.5"
                android:background="@drawable/shape_card_with_ripple">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginBottom="@dimen/margin_12"
                    android:layout_marginStart="@dimen/margin_16"
                    android:text="Advanced"
                    android:textColor="@color/textTitleColor"
                    android:textSize="@dimen/text_20"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingStart="@dimen/margin_16"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16"
                    android:paddingBottom="@dimen/margin_4">

                    <ImageView
                        android:id="@+id/adv_crack_time_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_12"
                        android:src="@drawable/ic_time_to_crack" />

                    <TextView
                        android:id="@+id/adv_crack_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_2.5"
                        android:layout_toEndOf="@+id/adv_crack_time_img"
                        android:paddingStart="@dimen/margin_8"
                        android:paddingEnd="@dimen/margin_8"
                        android:text="Estimates time to crack\nusing other methods"
                        android:textColor="@color/textTitleColor"
                        android:textSize="@dimen/text_17"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/adv_crack_time_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/margin_12"
                        android:src="@drawable/ic_about" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/offline_fast_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="@dimen/margin_2.5"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingEnd="@dimen/margin_8"
                    android:text="• 10B per second"
                    android:textColor="@color/textTitleColor"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/offline_fast_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:layout_marginStart="65dp"
                    android:layout_marginEnd="@dimen/margin_2.5"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingEnd="@dimen/margin_8"
                    android:text="@string/not_applicable"
                    android:textColor="?colorControlNormal"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/online_fast_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="@dimen/margin_2.5"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingEnd="@dimen/margin_8"
                    android:text="• 10 per second"
                    android:textColor="@color/textTitleColor"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/online_fast_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:layout_marginStart="65dp"
                    android:layout_marginEnd="@dimen/margin_2.5"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingEnd="@dimen/margin_8"
                    android:text="@string/not_applicable"
                    android:textColor="?colorControlNormal"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/online_slow_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="@dimen/margin_2.5"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingEnd="@dimen/margin_8"
                    android:text="• 100 per hour"
                    android:textColor="@color/textTitleColor"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/online_slow_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:layout_marginStart="65dp"
                    android:layout_marginEnd="@dimen/margin_2.5"
                    android:paddingStart="@dimen/margin_8"
                    android:paddingEnd="@dimen/margin_8"
                    android:text="@string/not_applicable"
                    android:textColor="?colorControlNormal"
                    android:textSize="@dimen/text_16" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingStart="@dimen/margin_16"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16"
                    android:paddingBottom="@dimen/margin_10">

                    <ImageView
                        android:id="@+id/guesses_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_12"
                        android:src="@drawable/ic_guesses" />

                    <TextView
                        android:id="@+id/guesses_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_2.5"
                        android:layout_toEndOf="@+id/guesses_img"
                        android:paddingStart="@dimen/margin_8"
                        android:paddingEnd="@dimen/margin_8"
                        android:text="Estimated guesses to crack"
                        android:textColor="@color/textTitleColor"
                        android:textSize="@dimen/text_17" />

                    <TextView
                        android:id="@+id/guesses_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/guesses_title"
                        android:layout_toEndOf="@+id/guesses_img"
                        android:paddingStart="@dimen/margin_8"
                        android:paddingEnd="@dimen/margin_8"
                        android:text="@string/not_applicable"
                        android:textColor="?colorControlNormal"
                        android:textSize="@dimen/text_16" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingStart="@dimen/margin_16"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_16"
                    android:paddingBottom="@dimen/margin_10">

                    <ImageView
                        android:id="@+id/order_magn_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_12"
                        android:src="@drawable/ic_order_magnitude" />

                    <TextView
                        android:id="@+id/order_magn_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_2.5"
                        android:layout_toEndOf="@+id/order_magn_img"
                        android:paddingStart="@dimen/margin_8"
                        android:paddingEnd="@dimen/margin_8"
                        android:text="Order of magnitude of guesses"
                        android:textColor="@color/textTitleColor"
                        android:textSize="@dimen/text_17" />

                    <TextView
                        android:id="@+id/order_magn_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_magn_title"
                        android:layout_toEndOf="@+id/order_magn_img"
                        android:paddingStart="@dimen/margin_8"
                        android:paddingEnd="@dimen/margin_8"
                        android:text="@string/not_applicable"
                        android:textColor="?colorControlNormal"
                        android:textSize="@dimen/text_16" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>