<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_12"
    android:paddingBottom="@dimen/margin_8"
    android:background="@drawable/bottom_sheet_shape"
    android:layout_gravity="center"
    android:orientation="vertical">

    <include
        layout="@layout/bottom_sheet_header"/>

    <RelativeLayout
        android:id="@+id/author_1_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/margin_20"
        android:paddingEnd="@dimen/margin_12"
        android:paddingTop="@dimen/margin_16"
        android:paddingBottom="@dimen/margin_16">

        <ImageView
            android:id="@+id/author_1_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_12"
            android:src="@drawable/account"/>

        <TextView
            android:id="@+id/author_1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_2.5"
            android:layout_toEndOf="@+id/author_1_img"
            android:paddingStart="@dimen/margin_8"
            android:paddingEnd="@dimen/margin_8"
            android:text="@string/the_weird_aquarian"
            android:textColor="@color/textTitleColor"
            android:textSize="@dimen/text_16" />

    </RelativeLayout>

    <!--=====================================================-->

    <RelativeLayout
        android:id="@+id/author_2_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/margin_20"
        android:paddingEnd="@dimen/margin_12"
        android:paddingTop="@dimen/margin_16"
        android:paddingBottom="@dimen/margin_16">

        <ImageView
            android:id="@+id/author_2_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_12"
            android:src="@drawable/account" />

        <TextView
            android:id="@+id/author_2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_2.5"
            android:layout_toEndOf="@+id/author_2_img"
            android:paddingStart="@dimen/margin_8"
            android:paddingEnd="@dimen/margin_8"
            android:text="@string/parveshnarwal"
            android:textColor="@color/textTitleColor"
            android:textSize="@dimen/text_16" />

    </RelativeLayout>

</LinearLayout>