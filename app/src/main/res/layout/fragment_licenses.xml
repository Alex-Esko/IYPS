<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:scrollbarThumbVertical="@drawable/shape_scrollbar_thumb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_12"
        android:paddingBottom="@dimen/margin_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iyps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_22"
            android:layout_marginBottom="@dimen/margin_4"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/app_name"
            android:textAlignment="viewStart"
            android:textColor="@color/urlColor"
            android:textSize="@dimen/text_18"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:paddingStart="@dimen/margin_12"
            android:paddingEnd="@dimen/margin_12"
            android:paddingTop="@dimen/margin_12"
            android:background="@color/rippleColor"
            android:text="@string/copyright_iyps"
            android:textColor="@color/textTitleColor"
            android:textSize="@dimen/text_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:padding="@dimen/margin_12"
            android:background="@color/rippleColor"
            android:text="@string/gpl_3_0_license"
            android:textColor="@color/textTitleColor"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/zxcvbn4j"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_marginStart="@dimen/margin_22"
            android:layout_marginBottom="@dimen/margin_4"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/zxcvbn4j"
            android:textAlignment="viewStart"
            android:textColor="@color/urlColor"
            android:textSize="@dimen/text_18"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:paddingStart="@dimen/margin_12"
            android:paddingEnd="@dimen/margin_12"
            android:paddingTop="@dimen/margin_12"
            android:background="@color/rippleColor"
            android:text="@string/copyright_zxcvbn4j"
            android:textColor="@color/textTitleColor"
            android:textSize="@dimen/text_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:padding="@dimen/margin_12"
            android:background="@color/rippleColor"
            android:text="@string/mit_license"
            android:textColor="@color/textTitleColor"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/md_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_marginStart="@dimen/margin_22"
            android:layout_marginBottom="@dimen/margin_4"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/mdicons"
            android:textAlignment="viewStart"
            android:textColor="@color/urlColor"
            android:textSize="@dimen/text_18"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:padding="@dimen/margin_12"
            android:background="@color/rippleColor"
            android:text="@string/apache_2_0_license"
            android:textColor="@color/textTitleColor"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

</ScrollView>