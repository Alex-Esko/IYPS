<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarThumbVertical="@drawable/shape_scrollbar_thumb"
    tools:context=".fragments.main.AboutFragment"
    tools:ignore="ContentDescription">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="1dp"
            android:paddingStart="@dimen/margin_20"
            android:paddingTop="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_12"
            android:paddingBottom="@dimen/margin_10">

            <ImageView
                android:id="@+id/app_icon_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_12"
                android:src="@drawable/app_icon" />

            <TextView
                android:id="@+id/app_name"
                style="@style/MediumBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_6.5"
                android:layout_marginBottom="@dimen/margin_2.5"
                android:layout_toEndOf="@+id/app_icon_img"
                android:paddingStart="@dimen/margin_8"
                android:paddingEnd="@dimen/margin_8"
                android:text="@string/app_name_full"
                android:textColor="@color/textTitleColor"
                android:textSize="@dimen/text_18" />

            <TextView
                android:id="@+id/version"
                style="@style/MediumBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_name"
                android:layout_toEndOf="@+id/app_icon_img"
                android:paddingStart="@dimen/margin_8"
                android:paddingEnd="@dimen/margin_8"
                android:text="@string/app_version"
                android:textColor="?colorControlNormal"
                android:textSize="@dimen/text_16" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_card"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_margin="@dimen/margin_12">

            <TextView
                android:id="@+id/authors_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_2.5"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingStart="@dimen/margin_12"
                android:paddingTop="@dimen/margin_16"
                android:paddingEnd="@dimen/margin_12"
                android:paddingBottom="@dimen/margin_16"
                android:text="@string/authors"
                android:textAlignment="viewStart"
                android:textColor="@color/textTitleColor"
                android:textSize="@dimen/text_16"
                app:drawableStartCompat="@drawable/ic_account"
                android:drawablePadding="@dimen/margin_16" />

            <TextView
                android:id="@+id/privacy_policy_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2.5"
                android:layout_marginBottom="@dimen/margin_2.5"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingStart="@dimen/margin_12"
                android:paddingTop="@dimen/margin_16"
                android:paddingEnd="@dimen/margin_12"
                android:paddingBottom="@dimen/margin_16"
                android:text="@string/privacy_policy"
                android:textAlignment="viewStart"
                android:textColor="@color/textTitleColor"
                android:textSize="@dimen/text_16"
                app:drawableStartCompat="@drawable/ic_privacy_policy"
                android:drawablePadding="@dimen/margin_16"/>

            <TextView
                android:id="@+id/licenses_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2.5"
                android:layout_marginBottom="@dimen/margin_2.5"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingStart="@dimen/margin_12"
                android:paddingTop="@dimen/margin_16"
                android:paddingEnd="@dimen/margin_12"
                android:paddingBottom="@dimen/margin_16"
                android:text="@string/licenses"
                android:textAlignment="viewStart"
                android:textColor="@color/textTitleColor"
                android:textSize="@dimen/text_16"
                app:drawableStartCompat="@drawable/ic_licenses"
                android:drawablePadding="@dimen/margin_16" />

            <TextView
                android:id="@+id/view_on_git_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2.5"
                android:layout_marginBottom="@dimen/margin_10"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingStart="@dimen/margin_12"
                android:paddingTop="@dimen/margin_16"
                android:paddingEnd="@dimen/margin_12"
                android:paddingBottom="@dimen/margin_16"
                android:text="@string/view_on_github"
                android:textAlignment="viewStart"
                android:textColor="@color/textTitleColor"
                android:textSize="@dimen/text_16"
                app:drawableStartCompat="@drawable/ic_github"
                android:drawablePadding="@dimen/margin_16" />

        </LinearLayout>

</LinearLayout>