<resources>

    <!--App light theme-->
    <style name="AppTheme" parent="BaseAppStyle">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--Bottom sheet theme-->
    <style name="BottomSheetTheme" parent="BaseBottomSheetStyle">
        <item name="bottomSheetStyle">@style/BaseBottomSheetStyle</item>
        <item name="android:backgroundDimAmount">0.50</item>
        <item name="android:navigationBarColor">@color/bottomSheetColor</item>
        <item name="android:windowEnterAnimation">@anim/fade_in_slide_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/fade_out_slide_to_bottom</item>
    </style>

</resources>