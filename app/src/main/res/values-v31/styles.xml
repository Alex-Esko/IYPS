<resources>

    <!--PARENT APP THEME-->
    <style name="Base.Theme.IYPS" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="fontFamily">@font/roboto</item>
    </style>

    <!--#########################################################################################-->

    <!--MEDIUM BOLD TEXT STYLE-->
    <style name="MediumBoldText" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <!--#########################################################################################-->

    <!--TEXT BOX STYLE-->
    <style name="TextBoxStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox"/>

    <!--#########################################################################################-->

    <!--BASE BOTTOM SHEET STYLE-->
    <style name="BaseBottomSheetTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--MAKE ROOT VIEW OF BOTTOM SHEET TRANSPARENT FOR CUSTOM VIEW TO SHOW PROPERLY-->
    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>